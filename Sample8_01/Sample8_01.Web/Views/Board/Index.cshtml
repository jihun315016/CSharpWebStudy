@using Sample8_01.Shared.Models
@model BoardsVM

@{
    ViewData["Title"] = "Hello Board Page";
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>제목</th>
            <th>작성자</th>
            <th>작성일</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.boards)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.CreateDate</td>
            </tr>
        }
    </tbody>
</table>
